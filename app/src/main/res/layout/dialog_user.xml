<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#232323"
        android:orientation="vertical">

        <TextView
            android:transitionName="name_transition"
            android:id="@+id/dialog_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="90dp"/>
        <TextView
            android:transitionName="username_transition"
            android:id="@+id/dialog_username_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_viewprofileBtn_id"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/seeprofile_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:text="View Profile"
            android:layout_gravity="start"/>

        <Button
            android:id="@+id/dialog_blockUserBtn_id"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/blockuser_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Block User"
            android:layout_gravity="start"/>

    </LinearLayout>


    <com.mikhaellopez.circularimageview.CircularImageView
        android:transitionName="profilePic_transition"
        android:id="@+id/dialog_image_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_width="1dp"
        android:src="@drawable/defaultpic_icon"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>